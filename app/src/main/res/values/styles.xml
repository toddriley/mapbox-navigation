<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomNavigationMapRoute" parent="NavigationMapRoute">
        <item name="upcomingManeuverArrowBorderColor">@color/red</item>
    </style>

    <style name="CustomNavigationView" parent="NavigationViewLight">
        <item name="navigationViewRouteStyle">@style/CustomNavigationMapRoute</item>
    </style>

    <style name="MapViewRoute" parent="NavigationMapRoute">
        <item name="routeColor">@color/navigation_route_layer_green</item>
        <item name="routeShieldColor">@color/navigation_route_shield_layer_color</item>

        <item name="originWaypointIcon">@drawable/empty_rectangle</item>
        <item name="destinationWaypointIcon">@drawable/empty_rectangle</item>

        <item name="routeScale">0.25</item>
    </style>
</resources>
